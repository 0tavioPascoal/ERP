<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ERP</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.datatables.net/v/dt/dt-2.3.3/datatables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>

<body>

    @* SOMENTE MOSTRAR O HEADER SE NÃO FOR LOGIN OU REGISTER *@
    @if (!(ViewContext.RouteData.Values["controller"].ToString() == "Account" &&
        (ViewContext.RouteData.Values["action"].ToString() == "Login" ||
        ViewContext.RouteData.Values["action"].ToString() == "Register"))) {
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3 shadow-sm p-3 rounded">
                <div class="container-fluid">

                    <!-- LOGO -->
                    <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="Logo" width="50" height="30" class="me-2" />
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">

                        <!-- MENU CENTRAL -->
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item mx-2">
                                <a class="nav-link text-dark h5" asp-controller="Home" asp-action="Index">Início</a>
                            </li>

                            <li class="nav-item mx-2">
                                <a class="nav-link text-dark h5" asp-controller="Client" asp-action="Index">Clientes</a>
                            </li>

                            <li class="nav-item mx-2">
                                <a class="nav-link text-dark h5" asp-controller="Product" asp-action="Index">Produtos</a>
                            </li>

                            <li class="nav-item mx-2">
                                <a class="nav-link text-dark h5" asp-controller="Sale" asp-action="Index">Vendas</a>
                            </li>

                            <li class="nav-item mx-2">
                                <a class="nav-link text-dark h5" asp-controller="Report" asp-action="Index">Relatório</a>
                            </li>
                        </ul>

                        <div class="ms-auto d-flex align-items-center">
                            @await Html.PartialAsync("_LoginPartial")
                        </div>

                    </div>

                </div>
            </nav>
        </header>

    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2025 - ERP - Desenvolvido por Otávio
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>


    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
