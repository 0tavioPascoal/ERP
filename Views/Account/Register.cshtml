@using ERP.ViewModel
@model LoginViewModel

<div class="d-flex justify-content-center align-items-center" style="height: 90vh;">
    <div class="card shadow-lg p-4" style="width: 450px; border-radius: 15px;">

        <div class="text-center mb-4">
            <img src="~/images/Login.jpg" width="80" class="rounded mb-3 shadow" />
            <h3 class="fw-bold">Criar Conta</h3>
            <p class="text-muted">Cadastre um novo usuário para acessar o sistema</p>
        </div>

        <form asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-person-plus-fill"></i>
                    </span>
                    <input asp-for="Username" class="form-control" placeholder="Escolha um nome de usuário" />
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-shield-lock-fill"></i>
                    </span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Crie uma senha segura" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-success btn-lg">
                    Registrar
                </button>

                <a asp-controller="Account" asp-action="Login"
                   class="btn btn-outline-primary btn-lg">
                    Já tenho uma conta
                </a>
            </div>
        </form>

        <div class="text-center text-muted mt-3" style="font-size: 0.9rem;">
            © 2025 - ERP • Desenvolvido por Otávio
        </div>
    </div>
</div>
