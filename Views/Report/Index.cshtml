@{
    ViewData["Title"] = "Relatórios";
}

<div class="container mt-5">

    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Relatórios de Vendas</h2>
        <p class="text-muted">Gere relatórios completos em diferentes formatos</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body text-center p-4">

                    <img src="~/images/relatorio.png" alt="Relatórios"
                         width="90" class="mb-3 opacity-75" />

                    <h4 class="fw-semibold mb-3">Escolha o tipo de relatório</h4>

                    <a asp-controller="Report" asp-action="SalesPDF"
                       class="btn btn-danger btn-lg w-100">
                        🧾 Gerar Relatório PDF
                    </a>

                </div>
            </div>

        </div>
    </div>

</div>
