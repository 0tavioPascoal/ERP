@model ClientIndexViewModel

@{
    ViewData["Title"] = "Clientes";
}

<div class="text-center">
    <h1 class="display-4"> Listagem de Clientes</h1>

    <div class="d-grip gap-2 d-md-flex justify-content-end">
        <a role="button" class="btn btn-primary" asp-controller="Client" asp-action="CreateClient">Novo Cliente</a>
    </div>
    
  
    <table class="table table-hover mt-5" id="table-clients">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Telefone</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Clients != null && Model.Clients.Any()) {
                    @foreach (Client client in Model.Clients) {
                        <tr>
                        <th scope="row">@client.Id</th>
                        <td>@client.Name</td>
                        <td>@client.Email</td>
                        <td>@client.Phone</td>
                            <td>
                            <a role="button" class="btn btn-warning" asp-route-id="@client.Id" asp-action="EditClient" asp-controller="Client">Editar</a>
                            </td>
                            <td>
                            <a role="button" class="btn btn-danger" asp-route-id="@client.Id" asp-action="Delete" asp-controller="Client">Excluir</a>
                        </td>
                        </tr>
                    }
                }
        </tbody>
    </table>

</div>

