@{
}


@{
    ViewData["Title"] = "Cadastro de Clientes";
}

<div class="text-center">
    <h1 class="display-4">Cadastro de Clientes</h1>
    <p class="lead">Use esse Formulario para adicionar um novo cliente.</p>
</div>



<form asp-controller="Client" asp-action="CreateClient" method="post">
    <div class="form-group">
        <label asp-for="Name" >Nome: </label>
        <input type="text" asp-for="Name" class="form-control"  placeholder="Insira o nome do cliente">
    </div>
    <div class="form-group">
        <label asp-for="Email">Email: </label>
        <input type="email" asp-for="Email" class="form-control"  placeholder="Insira o email do cliente">
    </div>
    <div class="form-group">
        <label asp-for="Phone">Telefone: </label>
        <input type="tel" asp-for="Phone" class="form-control"  placeholder="Insira o telefone do cliente">
    </div>
    
    <button type="submit" class="btn btn-success">Cadastrar</button>
    <a role="button" asp-controller="Client" asp-action="Index" class="btn btn-warning ml-3">Cancelar</a>
</form>