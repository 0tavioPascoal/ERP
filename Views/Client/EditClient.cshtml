@model ERP.Models.Client


@{
    ViewData["Title"] = "Edição de Clientes";
}

<div class="text-center">
    <h1 class="display-4">Editar dados do Cliente</h1>
    <p class="lead">Use esse Formulario para editar os dados de um cliente.</p>
</div>

<form asp-action="EditClient" asp-controller="Client" method="post">
    <div class="form-group">
     
        <input type="hidden" asp-for="Id" class="form-control" >
    </div>
    <div class="form-group">
        <label asp-for="Name">Nome: </label>
        <input asp-for="Name" type="text" class="form-control"  placeholder="Insira o nome do cliente">
    </div>
    <div class="form-group">
        <label asp-for="Email">Email: </label>
        <input asp-for="Email" type="email" class="form-control"  placeholder="Insira o email do cliente">
    </div>
    <div class="form-group">
        <label asp-for="Phone">Telefone: </label>
        <input asp-for="Phone" type="tel" class="form-control"  placeholder="Insira o telefone do cliente">
    </div>
    
    <button type="submit" class="btn btn-success">Editar</button>
    <a role="button" asp-controller="Client" asp-action="Index" class="btn btn-warning ml-3">Cancelar</a>
</form>