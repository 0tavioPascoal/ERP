@model List<ERP.Models.Product>

@{
    ViewData["Title"] = "Produtos";
}

<div class="text-center">
    <h1 class="display-4">Listagem de Produtos</h1>

    <div class="d-grid gap-2 d-md-flex justify-content-end">
        <a role="button" class="btn btn-primary" asp-controller="Product" asp-action="CreateProduct">Novo Produto</a>
    </div>

    <table class="table table-hover mt-5">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Preço</th>
                <th scope="col">Estoque</th>
                <th scope="col">Categoria</th>
                <th scope="col">Criado</th>
                <th scope="col">Atualizado</th>

                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model) {
                <tr>
                    <th scope="row">@product.Id</th>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Stock</td>
                    <td>@product.Category</td>
                    <td>@product.Created.ToString("dd/MM/yy")</td>
                    <td>@product.Modified.ToString("dd/MM/yy")</td>
                    <td>
                        <a role="button" class="btn btn-warning" asp-page="/Products/Edit" asp-route-id="@product.Id">Editar</a>
                    </td>
                    <td>
                        <a role="button" class="btn btn-danger" asp-page="/Products/Delete" asp-route-id="@product.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
