@model List<ERP.Models.Product>

@{
    ViewData["Title"] = "Produtos";
}

<div class="text-center">
    <h1 class="display-4">Listagem de Produtos</h1>

    <div class="d-grid gap-2 d-md-flex justify-content-end">
        <a role="button" class="btn btn-primary" asp-controller="Product" asp-action="CreateProduct">
            Novo Produto
        </a>
    </div>

    <table class="table table-hover align-middle mt-5">
        <thead>
            <tr>
                <th scope="col" class="text-center">Id</th>
                <th scope="col">Nome</th>
                <th scope="col" class="text-end">Preço</th>
                <th scope="col" class="text-center">Estoque</th>
                <th scope="col">Categoria</th>
                <th scope="col">Criado</th>
                <th scope="col">Atualizado</th>
                <th scope="col" colspan="2" class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model) {
                <tr>
                    <td class="text-center">@product.Id</td>
                    <td>@product.Name</td>
                    <td class="text-end">@product.Price.ToString("C")</td>
                    <td class="text-center">@product.Stock</td>
                    <td>@product.Category</td>
                    <td>@product.Created.ToString("dd/MM/yy")</td>
                    <td>@product.Modified.ToString("dd/MM/yy")</td>
                    <td class="text-center">
                        <a role="button" class="btn btn-warning" asp-route-id="@product.Id" asp-action="EditProduct" asp-controller="Product">Editar</a>
                    </td>
                    <td class="text-center">
                        <a role="button" class="btn btn-danger" asp-route-id="@product.Id" asp-action="Delete" asp-controller="Product">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
