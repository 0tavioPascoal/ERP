@{
}


@{
    ViewData["Title"] = "Cadastro de Produtos";
}

<div class="text-center">
    <h1 class="display-4">Cadastro de Produtos</h1>
    <p class="lead">Use esse Formulario para adicionar um novo Produto.</p>
</div>



<form asp-controller="Product" asp-action="CreateProduct" method="post">
    <div class="form-group">
        <label asp-for="Name" >Nome: </label>
        <input type="text" asp-for="Name" class="form-control"  placeholder="Insira o nome do Produto">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Descrição: </label>
        <input type="text" asp-for="Description" class="form-control"  placeholder="Insira a descrição do Produto">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Preço: </label>
        <input type="number" asp-for="Price" class="form-control"  placeholder="Insira o preço do produto">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock">Estoque: </label>
        <input type="number" asp-for="Stock" class="form-control"  placeholder="Insira a quantiade em estoque do produto">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category">Categoria: </label>
        <input type="text" asp-for="Category" class="form-control"  placeholder="Insira a categoria do produto">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-success">Cadastrar</button>
    <a role="button" asp-controller="Product" asp-action="Index" class="btn btn-warning ml-3">Cancelar</a>
</form>