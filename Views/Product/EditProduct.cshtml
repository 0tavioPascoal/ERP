@model ERP.Models.Product


@{
    ViewData["Title"] = "Edição de Produtos";
}

<div class="text-center">
    <h1 class="display-4">Editar dados do Produto</h1>
    <p class="lead">Use esse Formulario para editar os dados de um Produto.</p>
</div>

<form asp-action="EditProduct" asp-controller="Product" method="post">
    <div class="form-group">

        <input type="hidden" asp-for="Id" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Id">Id: </label>
        <input type="number" readonly asp-for="Id" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Name">Nome: </label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Insira o nome do Produto">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Descrição: </label>
        <input type="text" asp-for="Description" class="form-control" placeholder="Insira a descrição do Produto">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Preço: </label>
        <input type="number" step="0.01" asp-for="Price" class="form-control" placeholder="Insira o preço do produto">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock">Estoque: </label>
        <input type="number" asp-for="Stock" class="form-control" placeholder="Insira a quantiade em estoque do produto">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category">Categoria: </label>
        <input type="text" asp-for="Category" class="form-control" placeholder="Insira a categoria do produto">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Created">Data de criação:</label>
            <input type="date" asp-for="Created" class="form-control" readonly />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Modified">Data de modificação:</label>
            <input type="date" asp-for="Modified" class="form-control" readonly />
        </div>
    </div>

    

    <button type="submit" class="btn btn-success">Editar</button>
    <a role="button" asp-controller="Product" asp-action="Index" class="btn btn-warning ml-3">Cancelar</a>
</form>